{
  "name": "promptvault-tests",
  "version": "1.0.0",
  "description": "Unit tests for PromptVault Chrome extension",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "../utils/*.js",
      "!../utils/index.js"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}